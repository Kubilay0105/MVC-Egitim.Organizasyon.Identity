@model EgitimOrg.Entity.ViewModel.LoginViewModel

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login V16</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="/logg/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/logg/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/logg/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/logg/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/logg/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/logg/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/logg/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/logg/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/logg/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/logg/css/util.css">
    <link rel="stylesheet" type="text/css" href="/logg/css/main.css">
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        <div class="container-login100" style="background-image: url('/logg/images/bg-01.jpg');">
            <div class="wrap-login100 p-t-30 p-b-50">
                <span class="login100-form-title p-b-41">
                    SİSTEM GİRİŞ
                </span>
                @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                <div class="login100-form validate-form p-b-33 p-t-5">
                    @Html.ValidationSummary("", new { @class = "text-danger text-center" })

                    <div class="wrap-input100 validate-input" data-validate="Enter username">
                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "input100 form-control",placeholder="Kullanıcı Adı" } })
                        @*@Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })*@
                        @*<input class="input100" type="text" name="username" placeholder="User name">*@
                        <span class="focus-input100" data-placeholder="&#xe82a;"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Enter password">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "input100 form-control",placeholder="Şifre" } })
                        @*@Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })*@
                        @*<input class="input100" type="password" name="pass" placeholder="Password">*@
                        <span class="focus-input100" data-placeholder="&#xe80f;"></span>
                    </div>

                    <div class="container-login100-form-btn m-t-32">

                            <button class="login100-form-btn">
                                Giriş Yap
                            </button>
                        <br />
                        <div class="col-md-12" style="text-align:center">
                            <a href="/Account/ForgotYourPassword">Şifreni mi Unuttun?</a>

                        </div>
                    </div>

                </div>
                }

            </div>
        </div>
    </div>


    <div id="dropDownSelect1"></div>

    <!--===============================================================================================-->
    <script src="/logg/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="/logg/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="/logg/vendor/bootstrap/js/popper.js"></script>
    <script src="/logg/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="/logg/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="/logg/vendor/daterangepicker/moment.min.js"></script>
    <script src="/logg/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="/logg/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="/logg/js/main.js"></script>

</body>
</html>