@model EgitimOrg.Entity.ViewModel.TeacherIndexModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAutomation.cshtml";
}

<aside>
    <div id="sidebar" class="nav-collapse ">
        @Html.Partial("/Views/Academical/PartialSidebar.cshtml")
    </div>
</aside>

<link href="~/css/acIndex.css" rel="stylesheet" />
<section id="main-content">
    <section class="wrapper">
        <div class="container">
            <div class="row">
                <h2 class="fa fa-book fa-4x">&nbsp;Sınıflarım</h2>
            </div>

            @{

               <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-8">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            @if (Model.Classrooms.Count != 0)
                            {

                                foreach (EgitimOrg.Entity.Entity.Classroom item in Model.Classrooms)
                                {

                                    <div class="offer offer-danger">
                                        <div class="shape">
                                            <div class="shape-text">
                                                <span class="glyphicon glyphicon glyphicon-eye-open"></span>
                                            </div>
                                        </div>
                                        <div class="offer-content">
                                            <h3 class="lead">
                                                @item.ClassName <label class="label label-success">@item.StartDate.ToShortDateString()</label>
                                                <label class="label label-danger">@item.FinishDate.ToShortDateString()</label>
                                            </h3>
                                            <p>
                                                Öğrenci Sayısı:
                                                <br>
                                                <div class="progress">
                                                    <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: 40%">
                                                        @item.Students.Count(s => s.IsDeleted == false)
                                                    </div>
                                                </div>
                                            </p>
                                        </div>
                                    </div>

                                }
                            }
                            else
                            {
                                <h4 style="text-align:center"> Henüz Sınıfınız Bulunmamaktadır...</h4>
                            }
                        </div>

                    </div>
                    <div class="col-md-2"></div>

                </div>
            }
        </div>

    </section>
</section>
